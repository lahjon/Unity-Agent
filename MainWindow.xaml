<Window x:Class="UnityAgent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UnityAgent"
        Title="Unity Agent" Width="1280" Height="820"
        Background="#1E1E2E" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Tab header style (no chrome, just content) -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Background="#313244"
                                CornerRadius="4,4,0,0" Padding="6,5" Margin="1,0">
                            <ContentPresenter ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#45475A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small button style for task list -->
        <Style x:Key="SmallBtn" TargetType="Button">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#1E1E2E"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Active task template -->
        <DataTemplate x:Key="ActiveTaskTemplate">
            <Border Background="#313244" CornerRadius="4" Padding="8" Margin="0,2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <Ellipse Width="8" Height="8" Margin="0,0,6,0">
                            <Ellipse.Fill><SolidColorBrush Color="#89B4FA"/></Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="{Binding StatusText}" Foreground="#89B4FA"
                                   FontSize="11" FontWeight="Bold"/>
                    </StackPanel>
                    <TextBlock Grid.Row="1" Text="{Binding ShortDescription}"
                               Foreground="#CDD6F4" FontSize="12"
                               TextTrimming="CharacterEllipsis" Margin="0,3,0,0"/>
                    <DockPanel Grid.Row="2" Margin="0,5,0,0">
                        <TextBlock Text="{Binding TimeInfo}" Foreground="#6C7086"
                                   FontSize="10" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Done" Click="Complete_Click"
                                    Background="#A6E3A1" Style="{StaticResource SmallBtn}"/>
                            <Button Content="Cancel" Click="Cancel_Click"
                                    Background="#F38BA8" Style="{StaticResource SmallBtn}" Margin="0"/>
                        </StackPanel>
                    </DockPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- History task template -->
        <DataTemplate x:Key="HistoryTaskTemplate">
            <Border Background="#313244" CornerRadius="4" Padding="8" Margin="0,2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <Ellipse Width="8" Height="8" Margin="0,0,6,0">
                            <Ellipse.Fill><SolidColorBrush Color="#A6E3A1"/></Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="{Binding StatusText}" Foreground="#6C7086"
                                   FontSize="11" FontWeight="Bold"/>
                    </StackPanel>
                    <TextBlock Grid.Row="1" Text="{Binding ShortDescription}"
                               Foreground="#A6ADC8" FontSize="12"
                               TextTrimming="CharacterEllipsis" Margin="0,3,0,0"/>
                    <DockPanel Grid.Row="2" Margin="0,5,0,0">
                        <TextBlock Text="{Binding TimeInfo}" Foreground="#6C7086"
                                   FontSize="10" VerticalAlignment="Center"/>
                        <Button Content="Restart" Click="Restart_Click"
                                Background="#89B4FA" Style="{StaticResource SmallBtn}"
                                HorizontalAlignment="Right" Margin="0"/>
                    </DockPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- ListBox style -->
        <Style x:Key="TaskListStyle" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Section -->
        <Border Grid.Row="0" Background="#2D2D44" CornerRadius="6" Padding="12" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="TaskInput" AcceptsReturn="True" TextWrapping="Wrap"
                         MinHeight="80" MaxHeight="150"
                         VerticalScrollBarVisibility="Auto"
                         Background="#1E1E2E" Foreground="#CDD6F4"
                         CaretBrush="#CDD6F4" BorderBrush="#45475A"
                         FontSize="14" FontFamily="Consolas" Padding="8"
                         KeyDown="TaskInput_KeyDown"/>
                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center" Width="200">
                    <CheckBox x:Name="SkipPermissionsToggle" IsChecked="True"
                              Foreground="#CDD6F4" Margin="0,0,0,10">
                        <TextBlock Text="Dangerously Skip Permissions"
                                   TextWrapping="Wrap" Foreground="#CDD6F4" FontSize="12"/>
                    </CheckBox>
                    <Button x:Name="ExecuteButton" Content="Execute Task" Click="Execute_Click"
                            Background="#89B4FA" Foreground="#1E1E2E"
                            FontWeight="Bold" FontSize="14"
                            Padding="14,10" Cursor="Hand" BorderThickness="0"/>
                    <TextBlock Text="Ctrl+Enter to execute" Foreground="#6C7086"
                               FontSize="10" Margin="0,6,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Task Lists -->
            <Border Background="#2D2D44" CornerRadius="6" Padding="8" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="ACTIVE TASKS"
                               Foreground="#89B4FA" FontWeight="Bold" FontSize="13"
                               Margin="4,0,0,6"/>
                    <ListBox x:Name="ActiveTasksList" Grid.Row="1"
                             Style="{StaticResource TaskListStyle}"
                             ItemTemplate="{StaticResource ActiveTaskTemplate}"
                             SelectionChanged="ActiveTask_Selected"/>
                    <TextBlock Grid.Row="2" Text="HISTORY (25h)"
                               Foreground="#A6ADC8" FontWeight="Bold" FontSize="13"
                               Margin="4,10,0,6"/>
                    <ListBox x:Name="HistoryTasksList" Grid.Row="3"
                             Style="{StaticResource TaskListStyle}"
                             ItemTemplate="{StaticResource HistoryTaskTemplate}"
                             SelectionChanged="HistoryTask_Selected"/>
                </Grid>
            </Border>

            <!-- Right: Output Tabs -->
            <Border Grid.Column="1" Background="#2D2D44" CornerRadius="6" Padding="4">
                <TabControl x:Name="OutputTabs" Background="Transparent" BorderThickness="0"/>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#2D2D44" CornerRadius="4" Padding="10,6" Margin="0,8,0,0">
            <TextBlock x:Name="StatusText" Foreground="#6C7086" FontSize="12"/>
        </Border>
    </Grid>
</Window>
