<UserControl x:Class="UnityAgent.Games.BirdHunterGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Focusable="True"
             PreviewKeyDown="OnPreviewKeyDown">
    <Grid Background="#191919">
        <!-- Menu state -->
        <StackPanel x:Name="MenuPanel" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Bird Hunter" Foreground="#DA7756" FontSize="22" FontWeight="Bold"
                       FontFamily="Segoe UI" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="Shoot as many birds as you can in 10 seconds!" Foreground="#777"
                       FontSize="13" FontFamily="Segoe UI" HorizontalAlignment="Center" Margin="0,0,0,6"/>
            <TextBlock x:Name="HighScoreMenuText" Foreground="#5CB85C" FontSize="14" FontWeight="SemiBold"
                       FontFamily="Segoe UI" HorizontalAlignment="Center" Margin="0,0,0,24"/>
            <Button Content="Start" Click="Start_Click"
                    Width="120" Height="36" FontSize="14" FontFamily="Segoe UI" FontWeight="SemiBold"
                    Cursor="Hand" Background="#DA7756" Foreground="#FFF" BorderThickness="0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                CornerRadius="6" Padding="16,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E89B7E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="Quit" Click="Quit_Click"
                    Width="90" Height="34" FontSize="13" FontFamily="Segoe UI" FontWeight="SemiBold"
                    Cursor="Hand" Background="#333" Foreground="#AAA" BorderThickness="0" Margin="0,10,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                CornerRadius="6" Padding="14,7">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <!-- Game state -->
        <Grid x:Name="GamePanel" Visibility="Collapsed">
            <!-- HUD overlay -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left"
                        Margin="16,12" Panel.ZIndex="1">
                <TextBlock Text="Score: " Foreground="#777" FontSize="16" FontFamily="Segoe UI"/>
                <TextBlock x:Name="ScoreText" Text="0" Foreground="#5CB85C" FontSize="16"
                           FontWeight="Bold" FontFamily="Segoe UI"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right"
                        Margin="16,12" Panel.ZIndex="1">
                <TextBlock Text="Time: " Foreground="#777" FontSize="16" FontFamily="Segoe UI"/>
                <TextBlock x:Name="TimerText" Text="30" Foreground="#DA7756" FontSize="16"
                           FontWeight="Bold" FontFamily="Segoe UI"/>
            </StackPanel>
            <!-- Bird canvas -->
            <Canvas x:Name="GameCanvas" Background="#111" Margin="0,44,0,0" Cursor="Cross"
                    ClipToBounds="True"/>
        </Grid>

        <!-- Result state -->
        <StackPanel x:Name="ResultPanel" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Visibility="Collapsed">
            <TextBlock Text="Time's Up!" Foreground="#DA7756" FontSize="20" FontWeight="Bold"
                       FontFamily="Segoe UI" HorizontalAlignment="Center" Margin="0,0,0,12"/>
            <TextBlock x:Name="FinalScoreText" Foreground="#5CB85C" FontSize="36" FontWeight="Bold"
                       FontFamily="Segoe UI" HorizontalAlignment="Center" Margin="0,0,0,4"/>
            <TextBlock Text="birds shot" Foreground="#666" FontSize="14" FontFamily="Segoe UI"
                       HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock x:Name="NewHighScoreText" Text="New High Score!" Foreground="#FFD700" FontSize="16"
                       FontWeight="Bold" FontFamily="Segoe UI" HorizontalAlignment="Center"
                       Margin="0,0,0,8" Visibility="Collapsed"/>
            <TextBlock x:Name="HighScoreResultText" Foreground="#777" FontSize="13" FontFamily="Segoe UI"
                       HorizontalAlignment="Center" Margin="0,0,0,24"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Try Again" Click="TryAgain_Click"
                        Width="110" Height="34" FontSize="13" FontFamily="Segoe UI" FontWeight="SemiBold"
                        Cursor="Hand" Background="#DA7756" Foreground="#FFF" BorderThickness="0" Margin="0,0,10,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                    CornerRadius="6" Padding="14,7">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="#E89B7E"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Quit" Click="Quit_Click"
                        Width="90" Height="34" FontSize="13" FontFamily="Segoe UI" FontWeight="SemiBold"
                        Cursor="Hand" Background="#333" Foreground="#AAA" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                    CornerRadius="6" Padding="14,7">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="#444"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
