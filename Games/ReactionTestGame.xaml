<UserControl x:Class="AgenticEngine.Games.ReactionTestGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Focusable="True"
             PreviewKeyDown="OnPreviewKeyDown">
    <Grid Background="#191919">
        <!-- Menu state: Start button -->
        <StackPanel x:Name="MenuPanel" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Reaction Test" Foreground="#DA7756" FontSize="22" FontWeight="Bold"
                       FontFamily="Segoe UI" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="Click the dot as fast as you can!" Foreground="#777"
                       FontSize="13" FontFamily="Segoe UI" HorizontalAlignment="Center" Margin="0,0,0,6"/>
            <TextBlock x:Name="BestTimeMenuText" Foreground="#5CB85C" FontSize="14" FontWeight="SemiBold"
                       FontFamily="Segoe UI" HorizontalAlignment="Center" Margin="0,0,0,24"/>
            <Button x:Name="StartBtn" Content="Start" Click="Start_Click"
                    Width="120" Height="36" FontSize="14"
                    Background="#DA7756" Style="{StaticResource Btn}"/>
            <Button Content="Quit" Click="Quit_Click"
                    Width="90" Height="34" FontSize="13"
                    Style="{StaticResource SecondaryBtn}" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Game state: waiting / dot appears -->
        <Canvas x:Name="GameCanvas" Background="#000000" Visibility="Collapsed"
                MouseDown="GameCanvas_MouseDown">
            <TextBlock x:Name="WaitText" Text="Wait for the dot..."
                       Foreground="#444" FontSize="16" FontFamily="Segoe UI"
                       Canvas.Left="0" Canvas.Top="0" Visibility="Collapsed"/>
            <Ellipse x:Name="TargetDot" Width="56" Height="56" Fill="White"
                     Visibility="Collapsed" Cursor="Hand"/>
            <!-- Too early message -->
            <TextBlock x:Name="TooEarlyText" Text="Too early! Wait for the dot."
                       Foreground="#A15252" FontSize="16" FontWeight="Bold"
                       FontFamily="Segoe UI" Visibility="Collapsed"/>
        </Canvas>

        <!-- Result state -->
        <StackPanel x:Name="ResultPanel" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Visibility="Collapsed">
            <TextBlock x:Name="ResultTime" Foreground="#5CB85C" FontSize="36" FontWeight="Bold"
                       FontFamily="Segoe UI" HorizontalAlignment="Center" Margin="0,0,0,4"/>
            <TextBlock Text="milliseconds" Foreground="#666" FontSize="14" FontFamily="Segoe UI"
                       HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock x:Name="NewBestText" Text="New Best!" Foreground="#FFD700" FontSize="16"
                       FontWeight="Bold" FontFamily="Segoe UI" HorizontalAlignment="Center"
                       Margin="0,0,0,8" Visibility="Collapsed"/>
            <TextBlock x:Name="BestTimeResultText" Foreground="#777" FontSize="13" FontFamily="Segoe UI"
                       HorizontalAlignment="Center" Margin="0,0,0,24"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Try Again" Click="TryAgain_Click"
                        Width="110" Height="34" FontSize="13"
                        Background="#DA7756" Style="{StaticResource Btn}" Margin="0,0,10,0"/>
                <Button Content="Quit" Click="Quit_Click"
                        Width="90" Height="34" FontSize="13"
                        Style="{StaticResource SecondaryBtn}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
