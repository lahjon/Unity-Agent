<UserControl x:Class="UnityAgent.Games.QuickMathGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Focusable="True"
             PreviewKeyDown="OnPreviewKeyDown">
    <Grid Background="#191919">
        <!-- Menu state -->
        <StackPanel x:Name="MenuPanel" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Quick Math" Foreground="#DA7756" FontSize="22" FontWeight="Bold"
                       FontFamily="Segoe UI" HorizontalAlignment="Center" Margin="0,0,0,4"/>
            <TextBlock Text="Solve as many equations as you can in 10 seconds!" Foreground="#777"
                       FontSize="13" FontFamily="Segoe UI" HorizontalAlignment="Center" Margin="0,0,0,6"/>
            <TextBlock x:Name="HighScoreMenuText" Foreground="#5CB85C" FontSize="14" FontWeight="SemiBold"
                       FontFamily="Segoe UI" HorizontalAlignment="Center" Margin="0,0,0,24"/>
            <Button x:Name="StartBtn" Content="Start" Click="Start_Click"
                    Width="120" Height="36" FontSize="14"
                    Background="#DA7756" Style="{StaticResource Btn}"/>
            <Button Content="Quit" Click="Quit_Click"
                    Width="90" Height="34" FontSize="13"
                    Style="{StaticResource SecondaryBtn}" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Game state -->
        <Grid x:Name="GamePanel" Visibility="Collapsed">
            <!-- Timer bar at top -->
            <Border Height="6" VerticalAlignment="Top" Background="#333" CornerRadius="3" Margin="20,16,20,0">
                <Border x:Name="TimerBar" Background="#DA7756" CornerRadius="3" HorizontalAlignment="Left"/>
            </Border>

            <!-- Timer text -->
            <TextBlock x:Name="TimerText" Foreground="#777" FontSize="13" FontFamily="Segoe UI"
                       HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,28,24,0"/>

            <!-- Score display -->
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="24,28,0,0">
                <TextBlock x:Name="ScoreText" Text="Score: 0" Foreground="#5CB85C" FontSize="15"
                           FontWeight="SemiBold" FontFamily="Segoe UI"/>
            </StackPanel>

            <!-- Equation and input centered -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="EquationText" Foreground="#FFF" FontSize="48" FontWeight="Bold"
                           FontFamily="Consolas" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBox x:Name="AnswerBox" Width="160" Height="48" FontSize="28" FontWeight="Bold"
                         FontFamily="Consolas" TextAlignment="Center" CaretBrush="#DA7756"
                         Background="#111" Foreground="#FFF" BorderBrush="#444" BorderThickness="2"
                         KeyDown="AnswerBox_KeyDown" TextChanged="AnswerBox_TextChanged">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <TextBlock x:Name="FeedbackText" Foreground="#5CB85C" FontSize="14" FontWeight="SemiBold"
                           FontFamily="Segoe UI" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Result state -->
        <StackPanel x:Name="ResultPanel" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Visibility="Collapsed">
            <TextBlock Text="Time's Up!" Foreground="#DA7756" FontSize="22" FontWeight="Bold"
                       FontFamily="Segoe UI" HorizontalAlignment="Center" Margin="0,0,0,12"/>
            <TextBlock x:Name="FinalScoreText" Foreground="#5CB85C" FontSize="48" FontWeight="Bold"
                       FontFamily="Segoe UI" HorizontalAlignment="Center" Margin="0,0,0,4"/>
            <TextBlock Text="correct answers" Foreground="#666" FontSize="14" FontFamily="Segoe UI"
                       HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock x:Name="NewHighScoreText" Text="New High Score!" Foreground="#FFD700" FontSize="16"
                       FontWeight="Bold" FontFamily="Segoe UI" HorizontalAlignment="Center"
                       Margin="0,0,0,8" Visibility="Collapsed"/>
            <TextBlock x:Name="HighScoreResultText" Foreground="#777" FontSize="13" FontFamily="Segoe UI"
                       HorizontalAlignment="Center" Margin="0,0,0,24"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Try Again" Click="TryAgain_Click"
                        Width="110" Height="34" FontSize="13"
                        Background="#DA7756" Style="{StaticResource Btn}" Margin="0,0,10,0"/>
                <Button Content="Quit" Click="Quit_Click"
                        Width="90" Height="34" FontSize="13"
                        Style="{StaticResource SecondaryBtn}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
