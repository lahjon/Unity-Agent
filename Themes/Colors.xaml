<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:conv="clr-namespace:AgenticEngine.Converters">
    <conv:StringToBrushConverter x:Key="StringToBrush"/>
    <conv:InvertBoolConverter x:Key="InvertBool"/>
    <conv:NestingDepthToMarginConverter x:Key="NestingDepthToMargin"/>
    <conv:StringToVisibilityConverter x:Key="StringToVisibility"/>
    <!-- ── Backgrounds (darkest → lightest) ── -->
    <SolidColorBrush x:Key="BgAbyss" Color="#0A0A0A"/>
    <SolidColorBrush x:Key="BgPit" Color="#0E0E0E"/>
    <SolidColorBrush x:Key="BgTerminalInput" Color="#141414"/>
    <SolidColorBrush x:Key="BgDarkTerminal" Color="#181818"/>
    <SolidColorBrush x:Key="BgDeep" Color="#191919"/>
    <SolidColorBrush x:Key="BgSection" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="BgSurface" Color="#222222"/>
    <SolidColorBrush x:Key="BgPopup" Color="#252525"/>
    <SolidColorBrush x:Key="BgCard" Color="#2A2A2A"/>
    <SolidColorBrush x:Key="BgElevated" Color="#2C2C2C"/>
    <SolidColorBrush x:Key="BgCardHover" Color="#2E2E2E"/>
    <SolidColorBrush x:Key="BgHover" Color="#353535"/>
    <SolidColorBrush x:Key="BgOverlay" Color="#CC191919"/>

    <!-- ── Borders ── -->
    <SolidColorBrush x:Key="BorderSubtle" Color="#333333"/>
    <SolidColorBrush x:Key="BorderMedium" Color="#3A3A3A"/>

    <!-- ── Text (dimmest → brightest) ── -->
    <SolidColorBrush x:Key="TextDisabled" Color="#555555"/>
    <SolidColorBrush x:Key="TextMuted" Color="#666666"/>
    <SolidColorBrush x:Key="TextDim" Color="#777777"/>
    <SolidColorBrush x:Key="TextSubdued" Color="#888888"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#999999"/>
    <SolidColorBrush x:Key="TextTabHeader" Color="#AAAAAA"/>
    <SolidColorBrush x:Key="TextBody" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="TextButton" Color="#C8C8C8"/>
    <SolidColorBrush x:Key="TextLight" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="TextBright" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="TextPrimary" Color="#E8E8E8"/>

    <!-- ── Accents ── -->
    <SolidColorBrush x:Key="Accent" Color="#DA7756"/>
    <SolidColorBrush x:Key="AccentHover" Color="#E89B7E"/>
    <SolidColorBrush x:Key="AccentBlue" Color="#4EA8DB"/>
    <SolidColorBrush x:Key="AccentTeal" Color="#4DB6AC"/>
    <SolidColorBrush x:Key="Info" Color="#C46A4B"/>

    <!-- ── Status / Feedback ── -->
    <SolidColorBrush x:Key="Success" Color="#5CB85C"/>
    <SolidColorBrush x:Key="SuccessGreen" Color="#4CAF50"/>
    <SolidColorBrush x:Key="Danger" Color="#A15252"/>
    <SolidColorBrush x:Key="DangerBright" Color="#E05555"/>
    <SolidColorBrush x:Key="DangerAlert" Color="#FF6B6B"/>
    <SolidColorBrush x:Key="DangerDeleteHover" Color="#E57373"/>
    <SolidColorBrush x:Key="WarningYellow" Color="#FFD600"/>
    <SolidColorBrush x:Key="WarningAmber" Color="#E0A030"/>
    <SolidColorBrush x:Key="WarningOrange" Color="#CC8800"/>
    <SolidColorBrush x:Key="HighScoreGold" Color="#FFD700"/>

    <!-- ── Specialty ── -->
    <SolidColorBrush x:Key="PlanBadgeBg" Color="#2A1F3D"/>
    <SolidColorBrush x:Key="PlanBadgeBorder" Color="#7E57C2"/>
    <SolidColorBrush x:Key="PlanBadgeText" Color="#CE93D8"/>
    <SolidColorBrush x:Key="PausedBlue" Color="#64B5F6"/>
    <SolidColorBrush x:Key="ToolActivityText" Color="#7A9EC2"/>
    <SolidColorBrush x:Key="SeparatorDark" Color="#444444"/>

    <!-- ── Global dark tooltip ── -->
    <Style TargetType="ToolTip">
        <Setter Property="Background" Value="{StaticResource BgPopup}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBody}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderSubtle}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6,4"/>
    </Style>
</ResourceDictionary>
